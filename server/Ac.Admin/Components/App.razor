    <script>
        window.downloadFileFromBase64 = function (filename, base64) {
            const a = document.createElement('a');
            a.href = 'data:application/octet-stream;base64,' + base64;
            a.download = filename;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
        };
    </script>
